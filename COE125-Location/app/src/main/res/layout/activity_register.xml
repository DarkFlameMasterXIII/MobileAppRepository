<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exampledemo.Group02_Group03.coe125.Register"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Register" />

    <EditText
        android:id="@+id/email_id"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email: "
        tools:layout_editor_absoluteX="17dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/username_id" />

    <EditText
        android:id="@+id/pass_id"
        android:layout_width="349dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password: "
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/address_id" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="156dp"
        android:layout_height="52dp"
        android:text="Register"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/pass_id"
        android:layout_marginLeft="114dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/address_id"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Home Address:"
        app:layout_constraintTop_toBottomOf="@+id/email_id"
        tools:layout_editor_absoluteX="18dp" />

    <EditText
        android:id="@+id/username_id"
        android:layout_width="348dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username:"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="18dp" />

</android.support.constraint.ConstraintLayout>
